<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loisgussenhoven.walkabout.view.activities.InfoRouteActivity">

    <TextView
        android:id="@+id/AIR_TV_Name"
        android:layout_width="217dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Route.name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AIR_TV_Info"
        android:layout_width="328dp"
        android:layout_height="214dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Route.information"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AIR_TV_Name" />

</android.support.constraint.ConstraintLayout>
