<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loisgussenhoven.walkabout.view.activities.InfoPinPointActivity">

    <ImageView
        android:id="@+id/AIP_IV"
        android:layout_width="260dp"
        android:layout_height="174dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/AIP_TV_Year"
        android:layout_width="57dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/AIP_TV_Name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/AIP_TV_Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Author"
        android:textColor="@color/oranje"
        app:layout_constraintStart_toStartOf="@+id/AIP_TV_Name"
        app:layout_constraintTop_toBottomOf="@+id/AIP_TV_Name" />

    <TextView
        android:id="@+id/AIP_TV_Info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="pinpoint info"
        android:scrollbars="vertical"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="@+id/AIP_TV_Author"
        app:layout_constraintTop_toBottomOf="@+id/AIP_TV_Author" />

    <TextView
        android:id="@+id/AIP_TV_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Pin point naam"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AIP_IV" />
</android.support.constraint.ConstraintLayout>
